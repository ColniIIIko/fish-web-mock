generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum ReportStatus {
  Active
  Pending
  Rejected
}

model Report {
  id        String   @id @default(uuid()) @db.Uuid
  city      String
  nickname  String?
  boat      String?
  landing   String?
  type      String?
  pictures  String[]
  userEmail String

  status     ReportStatus
  fishes     ReportFish[]
  anglers    Int?
  conditions Int?

  setup  String?
  report String?

  tripDate  DateTime
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime  @default(now()) @map("updated_at") @db.Timestamptz(6)
  deletedAt DateTime? @map("deleted_at")

  @@map("report")
}

model ReportFish {
  id String @id @default(uuid()) @db.Uuid

  report_id String @db.Uuid
  report    Report @relation(fields: [report_id], references: [id])

  species     String
  caught      Int
  length      Int?
  weight      Int?
  attachments String[]

  @@map("fish")
}
